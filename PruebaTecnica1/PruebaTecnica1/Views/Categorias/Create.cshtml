@model PruebaTecnica1.Models.Categoria

@{
    ViewData["Title"] = "Gestión de Categorias";
}

<h1>Gestión de Categorias</h1>


<h4>Agregar Categoria</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="Fechacreado" class="control-label"></label>
                <input type="hidden" asp-for="Fechacreado" class="form-control"   />
                <span asp-validation-for="Fechacreado" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div>&nbsp;</div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
