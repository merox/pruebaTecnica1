@model IEnumerable<PruebaTecnica1.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Gestión de Categorias</h1>

<p>
    <a asp-action="Create">Agregar nueva categoria</a>
</p>
<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fechacreado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fechacreado)
            </td>
            <td>
                @if(item.Estado==1)
                    { <p>Activo</p> }
                    else 
                    { <p>Inactivo</p> }
                </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"
                       class="text-decoration-none"><i class="icon-pencil"></i> </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"
                       class="text-decoration-none"><i class="icon-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
