@model IEnumerable<PruebaTecnica1.Models.DTO.ProductosDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Gestion de Productos</h1>
<br />
<p>
    <a asp-action="Create">Agregar registro</a>
</p>
<br /><br />
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th> Nombre del producto</th>
            <th>Precio de Venta</th>
            <th> Fecha de Creación</th>
            <th>Categoria</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precioventa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fechacreacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombrecategoria)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"
                       class="text-decoration-none"><i class="icon-pencil"></i> </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"
                       class="text-decoration-none"><i class="icon-trash"></i></a>
                </td>
        </tr>
}
    </tbody>
</table>
